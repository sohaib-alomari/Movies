<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e0eefa"

    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tmdb.omari.com.tmdb.DetailActivityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="#000000"
        android:background="@drawable/background"

        android:textSize="30dp"
        android:textStyle="bold"
        />

        <ImageView
            android:id="@+id/poster"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"

            android:paddingTop="15dp"

            android:src="@drawable/loading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/date"
            android:textColor="#000000"
            android:background="#e0eefa"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/poster"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:textColor="#000000"
            android:background="#e0eefa"
            android:drawableLeft="@drawable/star"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:layout_below="@+id/date"
            android:layout_toRightOf="@+id/poster"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAVORITE"
            android:paddingLeft="15dp"
            android:layout_below="@id/rating"

            android:layout_toRightOf="@id/poster"/>


        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:paddingTop = "20dp"

            android:layout_above="@+id/desc"
            android:background = "@android:color/black"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:background="#e0eefa"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:layout_below="@+id/poster"
            android:paddingRight = "15dp"

            android:paddingBottom = "15dp"


            />

        <LinearLayout android:layout_width = "fill_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/linear"
            android:paddingLeft= "15dp"
            android:paddingTop="30dp"
            android:paddingRight = "15dp"
            android:background="@drawable/background"
            android:layout_below = "@+id/desc"
            android:orientation = "vertical">


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background = "@android:color/white"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Watch Trailer 1"
                android:paddingLeft = "15dp"
                android:paddingRight = "0dp"
                android:paddingTop = "0dp"
                android:paddingBottom = "0dp"
                android:id = "@+id/trailer1"
                android:gravity = "center_vertical"
                android:onClick = "trailer1"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text = "Watch Trailer 2"
                android:paddingLeft = "15dp"
                android:paddingRight = "0dp"
                android:paddingTop = "0dp"
                android:paddingBottom = "0dp"
                android:id = "@+id/trailer2"
                android:gravity = "center_vertical"
                android:onClick = "trailer2"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background = "@android:color/white"/>
            <TextView
                android:text = "Reviews:"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft = "0dp"
                android:textColor="#ffffff"
                android:paddingRight = "0dp"
                android:paddingTop = "15dp"
                android:paddingBottom = "15dp"
                android:id ="@+id/reviews"/>







        </LinearLayout>






    </RelativeLayout>


    </ScrollView>

</RelativeLayout>
